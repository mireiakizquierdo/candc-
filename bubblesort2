#include <stdio.h>

int main()
{

// Deklaration der Variablen
    int Nummer[10], zahluser, j, k, swap;

        // zahluser     = wie viele Zahlen User eingibt
        // k            = wie viele Durchg채nge (pro Durchgang Zahluser - k Vergleiche)
        // Nummer[10]   = Array mit 10 Zahlen (0-9)
        // swap         = tempor채rer Speicherplatz


// INPUT ZAHLEN DIE MAN SORTIEREN SOLL

    printf("Wie viele Zahlen werden Sie eingeben? ");
    scanf("%d", &zahluser);

    printf("\nGeben Sie die Zahlen eine nach der anderen ein. \n");

    for (j = 0; j < zahluser; j++)
        scanf("%d", &Nummer[j]); // lesen Zahlen User eingibt, speichern in array


// SORTIEREN DER ZAHLEN AUFSTEIGENDER REIHENFOLGE

    for (j = 0 ; j < ( zahluser - 1 ); j++) // wenn j < als zahluser - 1 geht es weiter
                                            // 1. Durchgang zahluser - 1 Vergleiche, k. D. zahluser - k Vergleiche, letzter Durchgang 1 Vergleich
    {
        for (k = 0 ; k < zahluser - j - 1; k++)
        {
            if (Nummer[k] > Nummer[k+1]) // pro Durchgang aneinander stehende Zahlen vergleichen, nicht in Reihenfolge --> diese ver채ndern
            {
                swap       = Nummer[k]; // wenn Z2 > als Z1, Z2 in swap speichern
                Nummer[k]   = Nummer[k+1]; //
                Nummer[k+1] = swap;
            }
        }
    }


    // SORTIEREN DER ZAHLEN ABSTEIGENDER REIHENFOLGE

    for (j = 0 ; j < ( zahluser - 1 ); j++) // wenn j < als zahluser - 1 geht es weiter
        // 1. Durchgang n - 1 Vergleiche, k. D. n - k Vergleiche, letzter Durchgang 1 Vergleich
    {
        for (k = 0 ; k > zahluser - j - 1; k++)
        {
            if (Nummer[k] > Nummer[k+1]) // pro Durchgang aneinander stehende Zahlen vergleichen, nicht in Reihenfolge --> diese ver채ndern
            {
                swap       = Nummer[k]; // wenn Z2 > als Z1, Z2 in swap speichern
                Nummer[k]   = Nummer[k+1]; //
                Nummer[k+1] = swap;
            }
        }
    }


// AUSGABE SORTIERTE ZAHLEN

    printf("\nDie Zahlen in aufsteigender Reihenfolge:\n");
    
    for ( j = 0 ; j < zahluser ; j++ )
        printf("%d\n", Nummer[j]);

    printf("\nDie Zahlen in absteigender Reihenfolge:\n");

    for ( j = 0 ; j < zahluser ; j++ )
        printf("%d\n", Nummer[j]);
    
    return 0;
}
